{
  "name": "stophysics",
  "version-string": "0.1.0",
  "dependencies": [
        "mycel",
        "boost-random",
        "serar",
        "eigen3",
        "pcg-cpp",
        "gsl",
        "taskflow",
        "fmt",
        {
          "name": "serar",
          "features": [ "config", "json" ,"program-options" ]
        }
  ],
  "features": {
    "matlab" : {
      "description": "Build with MATLAB output archive",
      "dependencies": [ 
        {
          "name": "serar",
          "features": [ "matlab" ],
          "default-features": false
        }
      ]
    },
    "hdf5" : {
      "description": "Build with HDF5 output archive",
      "dependencies": [ 
        {
          "name": "serar",
          "features": [ "hdf5" ],
          "default-features": false
        }
      ]
    },
    "tests" : {
      "description": "Build tests",
      "dependencies": [ 
        "gtest"
      ]
    },
    "benchmarks" : {
      "description": "Build benmarks",
      "dependencies": [ 
        "benchmark"
      ]
    }
  }
}